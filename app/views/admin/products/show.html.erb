<% content_for :title, t(".title") %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h4 class="mb-0"><%= t(".title") %></h4>
          <div>
            <%= link_to t(".edit"), edit_admin_product_path(@product), class: "btn btn-primary btn-sm" %>
            <%= link_to t(".back"), admin_products_path, class: "btn btn-secondary btn-sm" %>
          </div>
        </div>
        
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <% if @product.images.attached? %>
                <%= image_tag @product.main_image.variant(resize_to_limit: Settings.images.medium_size),
                              alt: @product.name,
                              class: "img-fluid rounded" %>
              <% else %>
                <div class="text-center p-4 bg-light rounded">
                  <i class="fas fa-image fa-3x text-muted"></i>
                  <p class="text-muted mt-2"><%= t(".no_image") %></p>
                </div>
              <% end %>
            </div>
            
            <div class="col-md-8">
              <table class="table table-borderless">
                <tbody>
                  <tr>
                    <th width="30%"><%= t(".name") %>:</th>
                    <td><%= @product.name %></td>
                  </tr>
                  <tr>
                    <th><%= t(".sku") %>:</th>
                    <td><code><%= @product.sku %></code></td>
                  </tr>
                  <tr>
                    <th><%= t(".description") %>:</th>
                    <td><%= simple_format(@product.description) %></td>
                  </tr>
                  <tr>
                    <th><%= t(".categories") %>:</th>
                    <td>
                      <% if @product.categories.any? %>
                        <% @product.categories.each do |category| %>
                          <span class="badge bg-secondary me-1"><%= category.name %></span>
                        <% end %>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                  </tr>
                  <tr>
                    <th><%= t(".brand") %>:</th>
                    <td>
                      <% if @product.brand %>
                        <span class="badge bg-info"><%= @product.brand.name %></span>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                  </tr>
                  <tr>
                    <th><%= t(".price") %>:</th>
                    <td>
                      <span class="h5 text-success"><%= Settings.currency.symbol %><%= @product.current_price %></span>
                      <% if @product.on_sale? %>
                        <span class="text-muted text-decoration-line-through ms-2"><%= Settings.currency.symbol %><%= @product.base_price %></span>
                        <span class="badge bg-danger ms-1">
                          -<%= @product.discount_percentage %>%
                        </span>
                      <% end %>
                    </td>
                  </tr>
                  <tr>
                    <th><%= t(".stock_quantity") %>:</th>
                    <td>
                      <span class="badge <%= @product.stock_quantity > 0 ? 'bg-success' : 'bg-danger' %>">
                        <%= @product.stock_quantity %>
                      </span>
                      <% if @product.low_stock? %>
                        <span class="badge bg-warning ms-1"><%= t(".low_stock") %></span>
                      <% end %>
                    </td>
                  </tr>
                  <tr>
                    <th><%= t(".status") %>:</th>
                    <td>
                      <span class="badge <%= @product.is_active? ? 'bg-success' : 'bg-secondary' %>">
                        <%= @product.is_active? ? t(".active") : t(".inactive") %>
                      </span>
                    </td>
                  </tr>
                  <tr>
                    <th><%= t(".featured") %>:</th>
                    <td>
                      <% if @product.is_featured? %>
                        <span class="text-warning">â˜… <%= t(".yes") %></span>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                  </tr>
                  <tr>
                    <th><%= t(".created_at") %>:</th>
                    <td><%= l(@product.created_at, format: :long) %></td>
                  </tr>
                  <tr>
                    <th><%= t(".updated_at") %>:</th>
                    <td><%= l(@product.updated_at, format: :long) %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        
        <div class="card-footer">
          <div class="d-flex justify-content-between">
            <div>
              <%= link_to t(".edit"), edit_admin_product_path(@product), class: "btn btn-primary" %>
              <%= link_to t(".duplicate"), admin_products_path, class: "btn btn-info" %>
            </div>
            <div>
              <%= link_to t(".toggle_status"), toggle_status_admin_product_path(@product),
                          data: { turbo_method: :patch, turbo_confirm: t(".confirm_toggle_status") },
                          class: "btn btn-warning btn-sm" %>
              <%= link_to t(".toggle_featured"), toggle_featured_admin_product_path(@product),
                          data: { turbo_method: :patch, turbo_confirm: t(".confirm_toggle_featured") },
                          class: "btn btn-info btn-sm" %>
              <%= link_to t(".delete"), admin_product_path(@product),
                          data: { turbo_method: :delete, turbo_confirm: t(".confirm_delete") },
                          class: "btn btn-danger btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
