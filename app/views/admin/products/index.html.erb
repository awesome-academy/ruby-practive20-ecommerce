<% content_for :title, t("admin.products.index.title") %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h4 mb-0"><%= t("admin.products.index.title") %></h1>
  <%= link_to t("admin.products.index.new_product"), new_admin_product_path, class: "btn btn-success" %>
</div>

<!-- Advanced Filters -->
<div class="filter-box">
  <%= form_with url: admin_products_path, method: :get, local: true, class: "row g-3" do |form| %>
    <div class="col-md-3">
      <%= form.text_field :search, placeholder: t("admin.products.index.search_placeholder"), 
                          value: params[:search], class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= form.select :category_id, 
                      options_from_collection_for_select(@categories, :id, :name, params[:category_id]),
                      { prompt: t("admin.products.index.filters.all_categories") },
                      { class: "form-select" } %>
    </div>
    <div class="col-md-2">
      <%= form.select :brand_id, 
                      options_from_collection_for_select(@brands, :id, :name, params[:brand_id]),
                      { prompt: t("admin.products.index.filters.all_brands") },
                      { class: "form-select" } %>
    </div>
    <div class="col-md-2">
      <%= form.select :status, admin_product_status_options, 
                      { selected: params[:status] }, 
                      { class: "form-select" } %>
    </div>
    <div class="col-md-2">
      <%= form.select :stock_status, admin_product_stock_status_options, 
                      { selected: params[:stock_status] }, 
                      { class: "form-select" } %>
    </div>
    <div class="col-md-1">
      <%= form.submit "Filter", class: "btn btn-primary w-100" %>
    </div>
  <% end %>
  
  <!-- Price Range Filter -->
  <div class="row g-3 mt-2">
    <%= form_with url: admin_products_path, method: :get, local: true, class: "row g-3" do |form| %>
      <% params.except(:min_price, :max_price).each do |key, value| %>
        <%= hidden_field_tag key, value %>
      <% end %>
      <div class="col-md-2">
        <%= form.number_field :min_price, placeholder: t("admin.products.index.filters.min_price"), 
                              value: params[:min_price], class: "form-control", step: 0.01 %>
      </div>
      <div class="col-md-2">
        <%= form.number_field :max_price, placeholder: t("admin.products.index.filters.max_price"), 
                              value: params[:max_price], class: "form-control", step: 0.01 %>
      </div>
      <div class="col-md-2">
        <%= form.select :featured, admin_product_featured_options, 
                        { selected: params[:featured] }, 
                        { class: "form-select" } %>
      </div>
      <div class="col-md-3">
        <%= form.select :sort, admin_product_sort_options, 
                        { selected: params[:sort] }, 
                        { class: "form-select" } %>
      </div>
      <div class="col-md-1">
        <%= form.submit "Apply", class: "btn btn-outline-primary w-100" %>
      </div>
      <div class="col-md-2">
        <%= link_to "Clear", admin_products_path, class: "btn btn-outline-secondary w-100" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Products Table -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-white d-flex justify-content-between align-items-center">
    <h6 class="mb-0"><%= t("admin.products.index.table.total_products", count: @pagy.count) %></h6>
    <div class="d-flex align-items-center">
      <span class="text-muted me-3">Showing <%= @pagy.from %>-<%= @pagy.to %> of <%= @pagy.count %></span>
      <%= link_to "Export CSV", "#", class: "btn btn-outline-secondary btn-sm" %>
    </div>
  </div>
  <div class="card-body p-0">
    <% if @products.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th><%= t("admin.products.index.table.image") %></th>
              <th><%= t("admin.products.index.table.name") %></th>
              <th><%= t("admin.products.index.table.sku") %></th>
              <th><%= t("admin.products.index.table.category") %></th>
              <th><%= t("admin.products.index.table.brand") %></th>
              <th><%= t("admin.products.index.table.price") %></th>
              <th><%= t("admin.products.index.table.stock") %></th>
              <th><%= t("admin.products.index.table.status") %></th>
              <th><%= t("admin.products.index.table.featured") %></th>
              <th><%= t("admin.products.index.table.actions") %></th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <td>
                  <div class="product-image-thumb bg-light d-flex align-items-center justify-content-center">
                    <i class="fas fa-image text-muted"></i>
                  </div>
                </td>
                <td>
                  <div>
                    <%= link_to product.name, admin_product_path(product), class: "text-decoration-none fw-medium" %>
                    <% if product.short_description.present? %>
                      <div class="small text-muted mt-1"><%= truncate(product.short_description, length: 50) %></div>
                    <% end %>
                  </div>
                </td>
                <td><code><%= product.sku %></code></td>
                <td>
                  <% if product.categories.any? %>
                    <% product.categories.limit(2).each do |category| %>
                      <span class="badge bg-light text-dark mb-1"><%= category.name %></span>
                    <% end %>
                    <% if product.categories.count > 2 %>
                      <span class="badge bg-secondary">+<%= product.categories.count - 2 %></span>
                    <% end %>
                  <% else %>
                    <span class="text-muted">-</span>
                  <% end %>
                </td>
                <td>
                  <% if product.brand %>
                    <span class="badge bg-info"><%= product.brand.name %></span>
                  <% else %>
                    <span class="text-muted">-</span>
                  <% end %>
                </td>
                <td>
                  <div class="fw-medium"><%= number_to_currency(product.current_price) %></div>
                  <% if product.on_sale? %>
                    <div class="small text-muted text-decoration-line-through">
                      <%= number_to_currency(product.base_price) %>
                    </div>
                    <span class="badge bg-danger">-<%= product.discount_percentage %>%</span>
                  <% end %>
                </td>
                <td>
                  <div class="fw-medium"><%= product.stock_quantity %></div>
                  <span class="badge stock-badge <%= product.stock_status %>">
                    <%= t("admin.stock_status.#{product.stock_status}") %>
                  </span>
                </td>
                <td>
                  <span class="badge status-badge <%= product.is_active? ? 'active' : 'inactive' %>">
                    <%= product.is_active? ? t("admin.status.active") : t("admin.status.inactive") %>
                  </span>
                </td>
                <td>
                  <% if product.is_featured? %>
                    <span class="badge featured-badge">â˜… <%= t("admin.featured.yes") %></span>
                  <% else %>
                    <span class="text-muted">-</span>
                  <% end %>
                </td>
                <td>
                  <div class="btn-group btn-group-sm" role="group">
                    <%= link_to admin_product_path(product), class: "btn btn-outline-primary", title: t("admin.products.index.actions.view") do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_product_path(product), class: "btn btn-outline-secondary", title: t("admin.products.index.actions.edit") do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to toggle_status_admin_product_path(product), 
                                class: "btn btn-outline-#{product.is_active? ? 'warning' : 'success'}", 
                                title: product.is_active? ? t("admin.products.index.actions.deactivate") : t("admin.products.index.actions.activate"),
                                data: { turbo_method: :patch } do %>
                      <i class="fas fa-power-off"></i>
                    <% end %>
                    <%= link_to toggle_featured_admin_product_path(product), 
                                class: "btn btn-outline-#{product.is_featured? ? 'secondary' : 'warning'}", 
                                title: product.is_featured? ? t("admin.products.index.actions.unfeature") : t("admin.products.index.actions.feature"),
                                data: { turbo_method: :patch } do %>
                      <i class="fas fa-star"></i>
                    <% end %>
                    <%= link_to admin_product_path(product), 
                                class: "btn btn-outline-danger", 
                                title: t("admin.products.index.actions.delete"),
                                data: { turbo_method: :delete, turbo_confirm: t("admin.products.index.actions.confirm_delete") } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <div class="card-footer bg-white">
        <%== pagy_bootstrap_nav(@pagy) if respond_to?(:pagy_bootstrap_nav) %>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-box fa-4x text-muted mb-3"></i>
        <h5 class="text-muted"><%= t("admin.products.index.table.no_products") %></h5>
        <p class="text-muted">Start by creating your first product</p>
        <%= link_to t("admin.products.index.new_product"), new_admin_product_path, class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
