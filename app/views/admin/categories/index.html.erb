<% content_for :title, t("admin.categories.index.title") %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h4 mb-0"><%= t("admin.categories.index.title") %></h1>
  <%= link_to t("admin.categories.index.new_category"), new_admin_category_path, class: "btn btn-success" %>
</div>

<!-- Filters -->
<div class="filter-box">
  <%= form_with url: admin_categories_path, method: :get, local: true, class: "row g-3" do |form| %>
    <div class="col-md-4">
      <%= form.text_field :search, placeholder: t("admin.categories.index.search_placeholder"), 
                          value: params[:search], class: "form-control" %>
    </div>
    <div class="col-md-3">
      <%= form.select :status, admin_category_status_options, 
                      { selected: params[:status] }, 
                      { class: "form-select" } %>
    </div>
    <div class="col-md-3">
      <%= form.select :sort, admin_category_sort_options, 
                      { selected: params[:sort] }, 
                      { class: "form-select" } %>
    </div>
    <div class="col-md-2">
      <%= form.submit t(".filter"), class: "btn btn-primary w-100" %>
    </div>
  <% end %>
</div>

<!-- Categories Tree/List -->
<div class="card border-0 shadow-sm">
  <div class="card-header bg-white d-flex justify-content-between align-items-center">
    <h6 class="mb-0"><%= t("admin.categories.index.table.total_categories", count: @categories.count) %></h6>
    <div class="btn-group btn-group-sm" role="group">
      <button type="button" class="btn btn-outline-secondary" id="expand-all-btn">
        <i class="fas fa-expand-arrows-alt me-1"></i>
        <%= t("admin.categories.index.expand_all") %>
      </button>
      <button type="button" class="btn btn-outline-secondary" id="collapse-all-btn">
        <i class="fas fa-compress-arrows-alt me-1"></i>
        <%= t("admin.categories.index.collapse_all") %>
      </button>
    </div>
  </div>
  <div class="card-body">
    <% if @categories.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th width="<%= Settings.admin.table.checkbox_width %>"></th>
              <th><%= t("admin.categories.index.table.name") %></th>
              <th><%= t("admin.categories.index.table.slug") %></th>
              <th><%= t("admin.categories.index.table.parent") %></th>
              <th><%= t("admin.categories.index.table.products_count") %></th>
              <th><%= t("admin.categories.index.table.status") %></th>
              <th><%= t("admin.categories.index.table.position") %></th>
              <th><%= t("admin.categories.index.table.actions") %></th>
            </tr>
          </thead>
          <tbody class="sortable" data-sort-url="<%= sort_admin_categories_path %>" data-sort-param="category">
            <%= render partial: "category_row", collection: @categories, as: :category %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-tags fa-4x text-muted mb-3"></i>
        <h5 class="text-muted"><%= t("admin.categories.index.table.no_categories") %></h5>
        <p class="text-muted"><%= t(".no_categories_message") %></p>
        <%= link_to t("admin.categories.index.new_category"), new_admin_category_path, class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

<%= content_for :javascript do %>
  <%= javascript_include_tag "custom/admin/categories_index" %>
<% end %>
