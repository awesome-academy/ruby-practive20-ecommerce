<% content_for :title, t("admin.categories.edit.title") %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h4 mb-0"><%= t("admin.categories.edit.title") %></h1>
  <div>
    <%= link_to t("admin.categories.edit.cancel"), admin_category_path(@category), class: "btn btn-outline-secondary me-2" %>
    <%= link_to admin_category_path(@category), method: :delete, 
                class: "btn btn-outline-danger", 
                confirm: t("admin.categories.index.actions.confirm_delete") do %>
      <i class="fas fa-trash me-1"></i>
      <%= t("admin.categories.show.delete_category") %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <%= render "form", category: @category %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-light">
        <h6 class="mb-0">Category Info</h6>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <strong>Products:</strong>
          <span class="badge bg-primary"><%= @category.products.count %></span>
        </div>
        <div class="mb-3">
          <strong>Child Categories:</strong>
          <span class="badge bg-info"><%= @category.children.count %></span>
        </div>
        <div class="mb-3">
          <strong>Status:</strong>
          <span class="badge <%= @category.is_active? ? 'bg-success' : 'bg-secondary' %>">
            <%= @category.is_active? ? t("admin.status.active") : t("admin.status.inactive") %>
          </span>
        </div>
        <div class="mb-3">
          <strong>Created:</strong>
          <div class="text-muted small"><%= @category.created_at.strftime("%B %d, %Y") %></div>
        </div>
        <div>
          <strong>Last Updated:</strong>
          <div class="text-muted small"><%= @category.updated_at.strftime("%B %d, %Y") %></div>
        </div>
      </div>
    </div>
  </div>
</div>
